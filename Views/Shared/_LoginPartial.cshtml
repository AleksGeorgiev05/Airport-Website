@using Microsoft.AspNet.Identity
<ul class="navbar-nav navbar-right" style="margin-top: 15px;list-style-type: none">
    @if (User.Identity.IsAuthenticated)
    {
        <li><div style="margin-right: 10px;color: white;font-style: oblique">Welcome <b>@User.Identity.Name</b></div></li>
    }
    @if (!User.IsInRole("Admin") && !User.IsInRole("Employee") && !User.IsInRole("User"))
    {
        <li style="margin-right: 10px">@Html.ActionLink("Login", "Login", "Account", null, new { @class = "navbar-link" })</li>
        <li>@Html.ActionLink("Register ", "Register", "Account", null, new { @class = "navbar-link" })</li>
    }
    else
    {
        <li>@Html.ActionLink("Logout", "Logout", "Account", null, new { @class = "navbar-link" })</li>
    }
</ul>