<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" type="image/ico" href="@Url.Content("~/Cloud.ico")">
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/Site.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar-fixed-top blue-background-color" style="padding-bottom: 5px">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            </button>
            @Html.ActionLink("☁", "Index", "Home", new { area = "" }, new { @class = "navbar-brand cloud" })
        </div>
        <div class="container">
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "navbar-link" })</li>
                    <li>@Html.ActionLink("About", "About", "Home", null, new { @class = "navbar-link" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "navbar-link" })</li>
                    <li>@Html.ActionLink("Flights", "Flights", "Home", null, new { @class = "navbar-link" })</li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Users", "Users", "Admin", null, new { @class = "navbar-link" })</li>
                        <li>@Html.ActionLink("Reservations", "Reservations", "Admin", null, new { @class = "navbar-link" })</li>
                    }
                    else if (User.IsInRole("Employee"))
                    {
                        <li>@Html.ActionLink("Reservations", "Reservations", "Admin", null, new { @class = "navbar-link" })</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div style="font-family:Trebuchet MS" class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Airport</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
